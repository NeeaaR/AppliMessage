{% extends 'base.html.twig' %}

{% block content %}

    <form method="post" action="{{ path('login_check') }}" class="m-5">
        <div class="form-group">
            <input type="text" name="_username" placeholder="Pseudo" value="{{ lastUsername }}" />
        </div>
        <div class="form-group">
            <input type="password" name="_password" placeholder="Mot de passe" />
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" placeholder="Connexion" value="Connexion" />
        </div>
    </form>

{% endblock %}