{% extends 'base.html.twig' %}

{% block title %}Espace groupe {% if app.user is not null %} de {{app.user.username}} {% endif %}{% endblock %}

{% block body %}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Symfony</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{path('home')}}">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{path('profile',{'id':user.id})}}">Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{path('logout')}}">Log Out</a>
      </li>
    </ul>
  </div>
</nav>
<br>
<body>
        <div class="container-fluid">
			<div class="row justify-content-center h-100">
				<div class="col-md-4 col-xl-3 chat" id="largeur_div"><div class="card mb-sm-3 mb-md-0 contacts_card">
					<div class="card-header">
						<div class="input-group">
							<h3 style="color:white; margin-right:75%;">Vos groupes</h3>
							<a href="{{path('groupes_add')}}" class="btn btn-primary">Créer un groupe</a>
						</div>
					</div>
					<div class="card-body contacts_body">
						<ui class="contacts">
							<li>
								{% for groupe in user.groupes %}
								<a href="{{path('groupes_display',{'id':groupe.id})}}">
									<div class="d-flex bd-highlight">
										<div class="img_cont">
											<img class="rounded-circle user_img" src="{{ asset('/photos/' ~ groupe.photo) }}" alt="">
										</div>
										<div class="user_info">
											<span>{{groupe.name}}</span>
											{% for message in groupe.messages %}
												{% if loop.last %}
													<p>{{message.user.username}} : {{message.content}} <br> envoyé le {{ message.dateTime.date|date('d/m/Y à H:i') }} </p>
												{% endif %}
											{% endfor %}
										</div>
									</div>
								</a>
							{% endfor %}
							</li>
						</ui>
					</div>
					<div class="card-footer"></div>
				</div>
            </div>

	</body>

