{% extends 'base.html.twig' %}

{% block content %}

    <form method="post" action="" class="m-5">
        <div class="form-group">
            <input type="text" name="content" placeholder="Message" value="Message" />
        </div>
        <div class="form-group">
            <input type="number" name="state" placeholder="State" value="State" min="0" max="3">
